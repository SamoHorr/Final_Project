<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/book_search_image"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="7dp"
        android:layout_marginTop="44dp"
        android:contentDescription="Book image"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/book_search_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/book_search_image"
        android:text="Title"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/book_search_subtitle"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/book_search_title"
        android:text="Subtitle" />

    <TextView
        android:layout_below="@+id/book_search_subtitle"
        android:id="@+id/book_search_authors"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Authors" />

    <TextView
        android:id="@+id/book_search_publisher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/book_search_authors"
        android:layout_marginTop="5dp"
        android:text="Publisher" />

    <TextView
        android:layout_below="@+id/book_search_publisher"
        android:id="@+id/book_search_language"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Language"
        android:textColor="#000000"
        android:textSize="16sp" />

    <TextView
        android:layout_below="@+id/book_search_language"
        android:id="@+id/book_search_pages"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Number of Pages"
        android:textColor="#000000"
        android:textSize="16sp" />

    <TextView
        android:layout_below="@+id/book_search_pages"
        android:id="@+id/book_search_year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Year published"
        android:textColor="#000000"
        android:textSize="16sp" />

    <TextView
        android:layout_below="@+id/book_search_year"
        android:id="@+id/book_search_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description"
        android:textColor="#000000"
        android:textSize="16sp" />

    <TextView
        android:layout_below="@+id/book_search_description"
        android:id="@+id/book_search_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Price"
        android:textColor="#000000"
        android:textSize="16sp" />

    <TextView
        android:layout_below="@+id/book_search_price"
        android:id="@+id/book_search_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Price"
        android:textColor="#000000"
        android:textSize="16sp" />

</RelativeLayout>